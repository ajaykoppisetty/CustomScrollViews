<resources>
    <style name="Fill">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
    </style>
    <style name="Wrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="FillHeight" parent="Fill">
        <item name="android:layout_width">wrap_content</item>
    </style>
    <style name="FillWidth" parent="Fill">
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="TextViewDemo" parent="FillWidth">
        <item name="android:gravity">center</item>
        <item name="android:padding">5dp</item>
        <item name="android:background">@color/transparent_20</item>
        <item name="android:textSize">14sp</item>
        <item name="android:text">@string/lorem_ipsum_5</item>
    </style>
    <style name="TextViewDemoHuge" parent="TextViewDemo">
        <item name="android:textSize">48sp</item>
    </style>
    <style name="TextViewDemoLarge" parent="TextViewDemo">
        <item name="android:textSize">36dp</item>
    </style>
    <style name="TableCell">
        <item name="android:layout_margin">1dp</item>
        <item name="android:layout_width">85dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:background">@android:color/white</item>
    </style>
    <style name="ParallaxThirdTV">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">5dp</item>
        <item name="android:textSize">8dp</item>
    </style>
    <style name="ParallaxSecondTV">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">5dp</item>
        <item name="android:textSize">14dp</item>
    </style>
    <style name="ParallaxFirstTV">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">5dp</item>
        <item name="android:textSize">20dp</item>
    </style>
    <style name="UnderTV">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">5dp</item>
        <item name="android:textSize">20dp</item>
    </style>
    <style name="OverTV">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">5dp</item>
        <item name="android:textSize">14dp</item>
    </style>
    <style name="ScrollTV">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">5dp</item>
        <item name="android:textSize">14dp</item>
    </style>
</resources>